<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  :root {
  }
  html {
    font-size: 17px;
    font-family: ui-sans-serif, system-ui, Helvetica, sans-serif;
    scroll-behavior: smooth;
  }
  input,
  textarea:focus {
    outline: none;
  }
  [id]::before {
    content: "";
    display: block;
    height: 50px;
    margin-top: -50px;
    visibility: hidden;
  }

  @media only screen and (max-width: 768px) {
    html {
      font-size: 15px;
    }
  }

  @layer components {
    body {
      @apply bg-white dark:bg-gray-800 transition-colors duration-300;
    }
    section {
      @apply my-24;
    }
    .btn-light {
      @apply py-4 px-6 my-12 text-xl font-bold bg-gray-900 text-slate-200 rounded-lg hover:shadow-lg 
       duration-150 active:scale-90;
    }
    .input-light {
      @apply py-4 px-4 text-xl font-bold bg-slate-200  text-slate-800 
      rounded-lg  border-2 border-slate-200 focus:border-slate-800  
       focus:duration-150
       dark:bg-gray-700 dark:text-gray-300 
       dark:border-gray-700  dark:focus:border-gray-300 transition-colors duration-300;
    }
  }
</style>
